package com.pine.soft;

import java.io.IOException;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.cloud.client.circuitbreaker.EnableCircuitBreaker;
import org.springframework.cloud.netflix.eureka.EnableEurekaClient;
import org.springframework.cloud.netflix.hystrix.dashboard.EnableHystrixDashboard;

@SpringBootApplication
@EnableHystrixDashboard//开启熔断监控，页面地址 http://{host}:{port}/hystrix
@EnableCircuitBreaker//如果启用fegin，则内部默认支持熔断，此处可省略
public class EurekaHystrixApplication {
	public static void main(String[] args) throws IOException {
		SpringApplication.run(EurekaHystrixApplication.class, args);
		System.out.println("测试服务（提供者）已经注册到Eureka服务中心");
	}
}
